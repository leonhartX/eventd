<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(event) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :hold_at %>
      <%= f.text_field :hold_at, data: { date_format: 'YYYY/MM/DD hh:mm' }, class: "form-control date-picker" %>

      <%= f.label :capacity %>
      <%= f.text_field :capacity, class: 'form-control' %>

      <%= f.label :owner %>
      <%= f.text_field :owner, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :tag %>
      <%= f.autocomplete_field :tags, autocomplete_tag_name_completions_path, 'data-delimiter' => ',', class: 'form-control', value: event.tags.map(&:name).join(",") %>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>